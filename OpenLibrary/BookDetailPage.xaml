<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OpenLibrary.BookDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <TextBlock Text="{Binding Key}" FontSize="20" />

        <StackPanel Margin="0,40,0,0">
            <Image Width="100" Height="150" Source="{Binding CoverImageUrl}"/>
            <TextBlock Text="{Binding Title}" FontSize="20"/>
            <!--<TextBlock FontSize="16" Text="{Binding AuthorNames}"/>-->
            <TextBlock FontSize="16" Text="{Binding AuthorNamesAsString}"/>
            <TextBlock FontSize="13"  Text="{Binding FirstPublishYear}">
            </TextBlock>
        </StackPanel>
    </Grid>




</Page>